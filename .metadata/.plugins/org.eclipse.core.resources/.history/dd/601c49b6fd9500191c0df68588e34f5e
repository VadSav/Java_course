
public class Recursion {

	public static void main(String[] args) {
		
		Factorial fact = new Factorial();
		System.out.println("The factorial of 5 is equal to " + fact.fact(5));
        System.out.println("The factorial of 10 is equal to " + fact.fact(10));
        System.out.println("The factorial of 12 is equal to" + fact.fact(12));
        System.out.println("The factorial of 15 is equal to" + fact.fact(15));
 
	}

}
